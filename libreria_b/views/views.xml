    <record model="ir.actions.server" id="libreria_b.action_server">
      <field name="name">libreriaB server</field>
      <field name="model_id" ref="model_libreria_b_libreria_b"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "list,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="Gestion de libreria" id="libreria_b.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Gestion" id="libreria_b.menu_1" parent="libreria_b.menu_root"/>

    <!-- actions -->

    <menuitem name="Libros" id="libreria_b.menu_1_list" parent="libreria_b.menu_1"
              action="libreria_b.libro_action_window"/>

    <menuitem name="Autores" id="libreria.menu_2_list" parent="libreria_b.menu_1" 
              action="libreria_b.autor_action_window"/>
  </data>
</odoo>
