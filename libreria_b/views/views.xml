<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="libreria_b.libro_list">
          <field name="name">Libros list</field>
          <field name="model">libreria_b.libro</field>
          <field name="arch" type="xml">
            <list>
              <field name="title"/>
              <field name="pages"/>
              <field name="price"/>
              <field name="is_available" widget="boolean_toggle" readonly="1"/>
              <field name="publicacion_date"/>
              <field name="created_datetime"/>
            </list>
          </field>
    </record>

    <record  model="ir.ui.view" id="libreria_b.autor_list" >
      <field name="name">Autores list</field>
      <field name="model">libreria_b.autor</field>
      <field name="arch" type="xml">
            <list>
              <field name="nombre"/>
            </list>
          </field>
    </record>

    <record model="ir.ui.view" id="libreria_b.libro_form">
          <field name="name">Formulario Libro</field>
          <field name="model">libreria_b.libro</field>
          <field name="arch" type="xml">
              <form string="Formulario Libro">
                <sheet>
                  <notebook>
                    <page string="Detalles del Libro">
                      <group>
                        <field name="portada" widget="image" options="{'size': [150,250]}" />
                      <group>
                        <field name="title" />
                      </group>
                      <group>
                        <field name="pages" />
                        <field name="price" />
                      </group>
                      </group>
                      <group>
                        <field name="is_available" />
                        <field name="publicacion_date" />
                      </group>
                      <page string="Autor">
                        <group>
                          <field name="autores_id"></field>
                        </group>
                      </page>
                      <page string="Más pestañas">
                    </page>
                  </notebook>
                </sheet>
              </form>
          </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="libreria_b.libro_action_window">
      <field name="name">Listado de Libros</field>
      <field name="res_model">libreria_b.libro</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="libreria_b.autor_action_window">
      <field name="name">Listado de Autores</field>
      <field name="res_model">libreria_b.autor</field>
      <field name="view_mode">list,form</field>
    </record>
    <!-- server action to the one above -->
