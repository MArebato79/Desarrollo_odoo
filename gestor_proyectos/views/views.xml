<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gestor_proyectos.proyecto_list">
      <field name="name">proyecto list</field>
      <field name="model">gestor_proyectos.proyecto</field>
      <field name="arch" type="xml">
        <list>
          <field name="nombre"/>
          <field name="descripcion"/>
          <field name="fechaInicio"/>
          <field name="fechaFin"/>
          <field name="responsable"/>
          <field name="porcentajeAvance"/>
        </list>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gestor_proyectos.proyecto_action_window">
      <field name="name">Gestor de Proyectos</field>
      <field name="res_model">gestor_proyectos.proyecto</field>
      <field name="view_mode">list,form</field>
    </record>


